# Include settings that are under the control of asoundconf(1).
# (To disable these settings, comment out this line.)

#</home/jd/.asoundrc.asoundconf>


# Tentative de choper du son sous flash avec jack
# https://lists.ubuntu.com/archives/ubuntu-studio-users/2007-August/000398.html
# http://alsa.opensrc.org/index.php/Jack_(plugin)

pcm.!default {
    type plug
    slave { pcm "jack" }
}

#ctl.mixer0 {
#    type hw
#    card 1
#    device 1
#}

pcm.jack {
    type jack
    playback_ports {
        0 system:playback_1
        1 system:playback_2
    }
    capture_ports {
        0 system:capture_1
        1 system:capture_2
    }
}

